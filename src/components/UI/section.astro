---
// import {Image} from "astro:assets"
import { cn } from "../../utils"
import Highlight from "./highlight.astro"
const {colorTitle, class: className,title="", Memoji, AltMemoji} = Astro.props

const basePath = `/assets/${Memoji}`

const variants =[
  {size: 80, file: `${basePath}-80.webp`},
  {size: 160, file: `${basePath}-160.webp`},
  {size: 240, file: `${basePath}-240.webp`},
  
]
---

<section>
  <div class={cn(className,'flex flex-wrap md:flex-nowrap mb-20 items-start')}>
      <!-- Text/Image -->
      <div class="w-full md:w-1/3 flex flex-row items-center justify-center mb-10 md:p-0">
        
        <h1 class="text-[30px] lg:text-[40px]"><Highlight>{colorTitle}</Highlight>{title}</h1>
  
        <img
          src={variants[0].file}
          alt={AltMemoji}
          srcset={variants.map(v=> `${v.file} ${v.size}w`).join(", ")}
          sizes="80px"
          width="80"
          height="80"
          loading="lazy"
          decoding="async"
          class="w-auto h-[80px]"
        />

  </div>

      <!-- text/slot -->
  <div class="w-full md:w-2/3 flex flex-col text-[16px] md:text-[20px]">
      <slot/>

  </div>

  </div>
</section>