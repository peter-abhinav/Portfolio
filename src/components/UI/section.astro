---
import Image from "astro/components/Image.astro"
const {colorTitle, title, Memoji, AltMemoji} = Astro.props
---

<section>
  <div class="flex flex-wrap gap-y-3 lg:flex-nowrap mb-30 items-center-10">

      <span class="w-full flex flex-col lg:flex-row items-center">

        <h1 class="flex items-center p-5 justify-center gap-x-2 text-[60px] ">
          <strong class="text-accent">{colorTitle} </strong>{title}
        </h1> 

        <Image src={Memoji} alt={AltMemoji} class="w-auto h-90"/>

      </span>


      <slot/>

      
  </div>
</section>