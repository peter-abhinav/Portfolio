---
import Image from "astro/components/Image.astro"
import { cn } from "../../utils"
const {colorTitle, class: className,title="", Memoji, AltMemoji} = Astro.props
---

<section>
  <div class={cn(className, 'w-auto flex flex-wrap lg:flex-nowrap mb-30 items-start')}>

      <span class="w-full md:w-1/3 flex flex-col items-center bg-red-900 md:flex-row md:items-start">

        <Image src={Memoji} alt={AltMemoji} class="w-auto bg-blue-900 h-90 md:h-15 lg:h-25"/>

        <h1 class="bg-green-900 w-full h-auto text-[60px] md:text-[30px] lg:text-[40px]">
          <strong class="text-accent">{colorTitle} </strong>{title}
        </h1> 


      </span>

<div class="w-full md:w-2/3 flex flex-col gap-4 text-[18px]">
    <slot />
  </div>

  </div>
</section>